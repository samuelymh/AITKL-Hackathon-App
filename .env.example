# MongoDB Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/
MONGODB_DB_NAME=healthapp

# JWT Configuration
JWT_SECRET=your-super-secure-secret-key-change-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=health-app
JWT_AUDIENCE=health-app-users

# Security Settings
ROTATE_REFRESH_TOKENS=true

# NextAuth Configuration (if using NextAuth in future)
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Application Configuration
NODE_ENV=development

# Optional: Encryption keys for PII/PHI data
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Optional: Additional MongoDB settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_SOCKET_TIMEOUT_MS=45000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
