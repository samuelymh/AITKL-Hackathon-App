# MongoDB Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_DB_NAME=healthapp

# Example for local development:
# MONGODB_URI=mongodb://localhost:27017/healthcare-app

# JWT Configuration
JWT_SECRET=your-super-secure-secret-key-change-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=health-app
JWT_AUDIENCE=health-app-users

# Security Settings
ROTATE_REFRESH_TOKENS=true

# NextAuth Configuration (if using NextAuth in future)
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Application Configuration
NODE_ENV=development

# Gemini API Configuration
GOOGLE_AI_API_KEY=your-secret-key-here

# Field-Level Encryption Configuration (CRITICAL for PII/PHI protection)
# ===============================================================================
# PRODUCTION: Use AWS KMS, HashiCorp Vault, or similar key management service
# DEVELOPMENT: Generate secure 32-character keys for local testing

# Master encryption key (32 characters for AES-256-GCM)
ENCRYPTION_MASTER_KEY=your-32-character-master-key-here

# Salt for key derivation (should be unique per environment)
ENCRYPTION_SALT=your-unique-salt-for-key-derivation

# Key rotation settings (for compliance and security)
KEY_ROTATION_ENABLED=false
CURRENT_KEY_VERSION=1

# Legacy encryption key (for backward compatibility)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Additional MongoDB settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_SOCKET_TIMEOUT_MS=45000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Healthcare Compliance Settings
# ===============================================================================
# Audit logging retention (7 years for healthcare compliance)
AUDIT_RETENTION_DAYS=2555

# Security headers and CORS
SECURITY_HEADERS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Feature toggles for encryption and security
ENABLE_FIELD_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_QR_CODE_ROTATION=true
ENABLE_GEOLOCATION_VALIDATION=false
